ifeq ($(CC)-$(USE_MP_COMPILE),cl-1)
  $(OBJECTS): $(SOURCES) | $(CC).args $(OBJ_DIR)
	$(call green_msg, Compiling $(words $(SOURCES)) .c-files in one go...)

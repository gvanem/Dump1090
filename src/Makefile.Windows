  BIN_DIR = $(realpath $(TEMP))/dump1090/standing-data/results

  ../blocks_test.exe: $(OBJ_DIR)/gen-code-blocks.obj
	$(call link_EXE, $@, $^ -nodefaultlib:ws2_32.lib $(ASAN_LIBS))

